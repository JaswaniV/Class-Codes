public static void main(String[] args) {
        int[] arr = {1,2,3,4,5,6};
        int target = 15;
        int k = 3;
        int ans = -1;
        for(int i = 0;i<=arr.length-3;i++){
            int sum = 0;
            for(int j = i;j<=i+3;j++){
                sum+=arr[i];
            }
            ans = Math.max(ans,sum);
    }
        System.out.println(ans);
     }
